{% extends '_layout.' + getConfig('viewExtension') %}

{% block content %}
    <!--container start-->
    <div class="container">

        <div class="row">

            <!--blog start-->
            <div class="col-lg-9">
                <div class="blog-item">
                    <div class="row">
                        {% if post.image %}
                            <div class="col-lg-10 col-sm-10">
                                <div class="blog-img gs">
                                    <img src="{{ post.image }}" alt=""/>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="row">

                        <div class="col-lg-10 col-sm-10">
                            <h1>
                                <a href="#">
                                    {{ post.title }}
                                </a>
                            </h1>

                            <p>{{ post.full_text | safe }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="blog-side-item">
                    {{ getSidebar("right-sidebar") | async | safe }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
<fieldset>
    <legend>{{ widget.title }}</legend>
    <ul>
        {% for post in posts %}
            <div class="media">
                <a class="pull-left feature_image" href="/blog/posts/{{ post.id }}/{{ post.alias }}">
                    <img class=" " src="{{ post.image }}" alt="">
                </a>
                <div class="media-body">
                    <h5 class="media-heading">
                        <a href="/blog/posts/{{ post.id }}/{{ post.alias }}">
                            {{ post.title }}
                        </a>
                    </h5>
                    <p>
                        {{ post.intro_text | title(50, '...') | safe }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </ul>
</fieldset>
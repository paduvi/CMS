{% extends '_layout.twig' %}
{% block content %}
    <!-- Blog Article Start-->
    <article class="single-post-content">
        {{ post.full_text | safe }}

        <div class="links">
            <a class="facebook" href="#"><i class="ico-facebook-with-circle"></i> Share</a>
            <a class="google-plus" href="#"><i class=" ico-google-with-circle"></i> Google+</a>
        </div>
    </article><!-- Blog Article End-->
    <!-- Blog Article Start -->
    <article>
        <div class="author">
            <div class="author-img">
                <a href="{{ post.user.user_image_url }}" data-lightbox="roadtrip">
                    <img alt="{{ post.user.display_name }}" src="{{ post.user.user_image_url }}">
                </a>
            </div>
            <div class="author-content">
                <h4>Author: {{ post.user.display_name }}</h4>
                <p>Email: {{ post.user.user_email }}</p>
                <p>Status: {{ post.user.user_status }}</p>
            </div>
        </div>
    </article><!-- Blog Article End -->
{% endblock %}
<div class="category entry-widget">
    <h5 class="widget-title">{{ widget.title }}</h5>

    <div class="tag">
        {% for category in categories %}
            <a href="/blog/posts/categories/{{ category.alias }}/{{ category.id }}">
                {% set cls = '' %}
                {% if loop.index % 3 === 0 %}
                    {% set cls = 'large' %}
                {% elseif loop.index % 3 === 1 %}
                    {% set cls = 'madium' %}
                {% endif %}
                <span class="{{ cls }}">{{ category.name }}</span>
            </a>
        {% endfor %}
    </div>
</div>
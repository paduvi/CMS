<!-- Header Section Start -->
<header class="site-header">
    <nav class="navbar navbar-default navbar-intimate role="
         data-offset-top="50" data-spy="affix">
        <div class="container">
            <div class="navbar-header">
                <!-- Start Toggle Nav For Mobile -->
                <button class="navbar-toggle" data-target="#navigation"
                        data-toggle="collapse" type="button"><span class=
                                                                   "sr-only">Toggle navigation</span> <span class=
                                                                                                            "icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span></button>
                <div class="logo">
                    <a class="navbar-brand" href="/"><i class=
                                                        "ico-3dglasses"></i></a>
                </div>
            </div>
            <!-- Navigation Start -->
            {{ getSidebar("main_menu") | async | safe }}
            <!-- Navigation End -->
        </div>
    </nav><!-- Mobile Menu Start -->
    {{ getSidebar("main_menu") | async | safe }}
</header><!-- Header Section End -->
<!-- Hero Area Start -->
<section class="text-center" id="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="intro-area">
                    <h3>
                        {% if post %}
                            {{ post.title }}
                        {% else %}
                            {{ postTitle }}
                        {% endif %}
                    </h3>
                    {% if post %}
                        <div class="entry-meta">
                            <span class="meta-part"><i class="ico-user"></i>{{ post.user.display_name }}</span>
                            <span class="meta-part"><i
                                        class="ico-calendar-alt-fill"></i>{{ post.published_at | moment('LL') }}</span>
                            <span class="meta-part"><i
                                        class="ico-tag"></i>{{ post.categories | category(categories) | safe }}</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section><!-- Hero Area End -->